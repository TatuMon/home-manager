* {
    border: none;
    border-radius: 8;
    font-family:   "FiraCode Nerd Font Propo"; /* Propo fonts are need for icons to show properly */
    font-size:     16px;
    min-height: 20px;
}

window#waybar {
    background: transparent;
}

window#waybar.hidden {
    opacity: 0.2
}

.modules-center {
    padding: 6px;
    margin: 5px 0px 2.5px 0px;
    border-radius: 5px;
    background-color: #3C3836;
    box-shadow: 0px 0px 2px rgba(0, 0, 0, .6);
}

#tray,
#custom-weather,
#workspaces {
    margin: 6px 0px 0px 12px;
    padding: 0px 12px;
    background-color: #3C3836;
    transition: all .2s ease;
}

#misc{
    margin: 6px 0px 0px 12px;
    padding: 0px 12px;
    border-radius: 10px;
    background-color: #3C3836;
    transition: all .2s ease;
}

#custom-hyprsunset,
#custom-zypper,
#custom-notification{
    margin: 0px 10px;
}

#workspaces button {
    background: transparent;
}
#workspaces button.active {
    color: #D79921
}
#workspaces button.urgent {
    color: #CC241D;
}

#mode, 
#battery, 
#cpu, 
#memory, 
#bluetooth,
#idle_inhibitor, 
#temperature,
#custom-layout,
#custom-hyprsunset,
#backlight {
    margin: 0px 5px;
    transition: all .3s ease;
}

#pulseaudio {
    margin: 6px 12px 0px 0px;
    background-color: #458588;
    padding: 0px 12px;
}

#clock {
    margin: 6px 12px 0px 0px;
    background-color: #458588;
    padding: 0px 12px;
}

#network {
    margin: 6px 12px 0px 0px;
    background-color: #3C3836;
    padding: 0px 12px;
}


#battery.warning {
   color: rgba(255, 210, 4, 1);
}

#battery.critical {
    color: rgba(238, 46, 36, 1);
}

#battery.charging {
    color: rgba(217, 216, 216, 1);
}

#bluetooth.disabled {
    color: rgba(128, 128, 128, 1);
}

#bluetooth.off {
    color: rgba(128, 128, 128, 1);
}

#bluetooth.connected {
    color: rgba(115, 186, 37, 1);
}

#custom-power-menu{
    margin: 6px 12px 0px 0px;
    padding: 0px 12px;
    transition: all .3s ease;
    background-color: #CC241D;
}
